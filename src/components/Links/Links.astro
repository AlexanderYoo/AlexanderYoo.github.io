---
import { Icon } from "astro-icon/components";
import { PERSONAL_INFO } from "../../data/personal";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["flex items-center gap-6 mb-6", className]}>
    {
        PERSONAL_INFO.socialLinks.map((link) => {
                const isMail = link.href.startsWith("mailto:");
                const isTel = link.href.startsWith("tel:");
                const resolvedHref = isMail ? "#contact" : link.href;

                return (
            <a
                href={resolvedHref}
                target={isMail || isTel
                    ? undefined
                    : "_blank"}
                rel={isMail || isTel
                    ? undefined
                    : "noopener noreferrer"}
                class="text-primary hover:text-blue-300 transition-colors duration-150 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary rounded-md"
                aria-label={link.label}
                title={link.label}
            >
                <Icon name={link.icon} class="size-6 md:size-8" />
            </a>
                );
            })
    }
</div>

<style>
    .text-primary {
        color: #3678cf;
    }
</style>
